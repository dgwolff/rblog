<div class="col-md-4 col-md-offset-4">
  <h2>rBlog</h2>
  <%= render 'layouts/messages' %>
  <%= form_tag admin_sessions_path do %>
    <div class="form-group">
      <%= text_field_tag :email, params[:email], class: "form-control", placeholder: "Email" %>
    </div>
    <div class="form-group">
      <%= password_field_tag :password, "", class: "form-control", placeholder: "Pasword" %>
    </div>
    <%= submit_tag "Login", class: "btn btn-primary btn block" %>
  <% end %>
</div>
